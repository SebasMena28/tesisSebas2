<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card mb-3" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="http://www.espaciobenessere.uy/assets/images/evaluacion-porte-de-armas-700x600.jpg"
                alt="login form" class="img-fixed" height="100%" width="100%" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">
                <h1 class="title text-center mb-4">
                    ¿Realmente desea eliminar esta evaluación?
                  </h1>
                  
                <form action="/evaluaciones/borrarEvaluacion/{{evaluacion.ID}}/{{evaluacion.CEDULA}}" object="" method="POST">

                  <h2 class="title text-center mb-4">
                    Evaluación hecha el {{evaluacion.FECHA}}
                  </h2>

                  <div class="row g-2">
                    <div class="col-md">
                      <div class="form-floating mb-3">
                        <textarea name="Tecnica" class="form-control" placeholder="Anamnesis" id="floatingTextarea2"
                          style="height: 100px" readonly>{{evaluacion.TECNICA}} </textarea>
                        <label for="floatingTextarea2">Técnica</label>
                      </div>
                    </div>
                  </div>

                  <div class="row g-2">
                    <div class="col-md">
                      <div class="form-floating mb-3">
                        <textarea name="Descripcion" class="form-control" placeholder="Anamnesis" id="floatingTextarea2"
                          style="height: 100px" readonly>{{evaluacion.DESCRIPCION}}</textarea>
                        <label for="floatingTextarea2">Descripción</label>
                      </div>
                    </div>
                  </div>

                  <div class="form-floating mb-3">
                    <textarea name="Resultados" class="form-control" placeholder="Anamnesis" id="floatingTextarea2"
                      style="height: 100px" readonly>{{evaluacion.RESULTADOS}}</textarea>
                    <label for="floatingTextarea2">Resultados</label>
                  </div>

                  <div class="row g-2">
                    <div class="col-md mb-3">
                      <div class="form-group p-3">
                        <a class="btn btn-warning btn-block w-100"
                          href="/evaluaciones/evaluacionesPaciente/{{evaluacion.CEDULA}}">
                          Regresar
                        </a>
                      </div>
                    </div>
                    <div class="col-md">
                      <div class="form-group p-3">
                        <button class="btn btn-danger btn-block w-100">
                          Borrar evaluación
                        </button>
                      </div>
                    </div>
                  </div>

                  <input type="hidden" name="_next" value="http://localhost:4000/pacientes">
                  <input type="hidden" name="_captcha" value="false">
                  <input type="hidden" name="_template" value="table">
                  <input type="hidden" name="_subject" value="Informe de evaluación psicológica">

                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>