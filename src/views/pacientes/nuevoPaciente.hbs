<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form class="formulario" action="/pacientes/nuevoPaciente" method="POST" enctype="multipart/form-data">
                        <div class="form-group pt-2">
                            <input type="text" class="form-control" name="cedula" maxlength="10" placeholder="cedula" autofocus>
                        </div>
                        <div class="form-group pt-2">
                            <input type="text" class="form-control" name="apellidoPaterno" placeholder="Apellido Paterno">
                        </div>
                        <div class="form-group pt-2">
                            <input type="text" class="form-control" name="apellidoMaterno" placeholder="Apellido Materno">
                        </div>
                        <div class="form-group pt-2">
                            <input type="text" class="form-control" name="primerNombre" placeholder="Primer Nombre">
                        </div>
                        <div class="form-group pt-2">
                            <input type="text" class="form-control" name="segundoNombre" placeholder="Segundo Nombre">
                        </div>
                        <div class="form-group pt-2">
                            <input type="date" class="form-control" name="fechaNacimiento">
                        </div>
                        <div class="form-group pt-2">
                            <select name="genero" class="form-control" aria-placeholder="Genero">
                                <option value="Femenino" selected>Femenino</option>
                                <option value="Masculino">Masculino</option>
                            </select>
                        </div>
                        <div class="form-group pt-2">
                            <select name="estadoCivil" class="form-control" aria-placeholder="Genero">
                                <option value="Soltero" selected>Soltero</option>
                                <option value="Casado">Casado</option>
                                <option value="Viudo">Viudo</option>
                                <option value="Divorciado">Divorciado</option>
                                <option value="Union Libre">Union Libre</option>
                            </select>
                        </div>
                        <div class="form-group pt-2">
                            <input type="text" class="form-control" name="ocupacion" placeholder="Ocupacion">
                        </div>
                        <div class="form-group pt-2">
                            <input type="text" class="form-control" name="religion" placeholder="Religion">
                        </div>
                        <div class="form-group pt-2 mx-auto">
                            <button class="btn btn-success btn-block">Guardar datos</button>
                        </div>
                    </form> 
                </div>
            </div>
        </div>
    </div>
</div>