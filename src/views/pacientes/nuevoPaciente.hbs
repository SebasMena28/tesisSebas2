<div class="container p-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <form class="formulario" action="/pacientes/nuevoPaciente" method="POST" enctype="multipart/form-data">
                        <div class="form-group pt-2">
                            <input type="text" class="form-control" name="cedula" placeholder="cedula" autofocus>
                        </div>
                        <div class="form-group pt-2">
                            <input type="text" class="form-control" name="apellidoPaterno" placeholder="Apellido Paterno">
                        </div>
                        <div class="form-group pt-2">
                            <input type="text" class="form-control" name="apellidoMaterno" placeholder="Apellido Materno">
                        </div>
                        <div class="form-group pt-2">
                            <input type="text" class="form-control" name="primerNombre" placeholder="Primer Nombre">
                        </div>
                        <div class="form-group pt-2">
                            <input type="text" class="form-control" name="segundoNombre" placeholder="Segundo Nombre">
                        </div>
                        <div class="form-group pt-2">
                            <input type="date" class="form-control" name="fechaNacimiento">
                        </div>
                        <div class="form-group pt-2">
                            <select name="select" class="form-control">
                                <option value="Femenino" selected>Femenino</option>
                                <option value="Masculino">Masculino</option>
                            </select>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>