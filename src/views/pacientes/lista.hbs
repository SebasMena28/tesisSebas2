                    <a href="/pacientes/datos/{{CEDULA}}" target="_blank">
                        <!-- target es para que abra la info en una ventana aparte -->
                        <h4 class="card-title text-uppercase">
                            {{PRIMERNOMBRE}}
                        </h4>
                    </a>
                    <p class="m-2">{{APELLIDOPATERNO}}</p>
                    <p class="m-2">{{CEDULA}}</p>
                    <p class="text-muted">
                        {{tiempo ULTIMACITA}}
                    </p>
                    <div class="">
