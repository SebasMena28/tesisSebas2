<div class="container p-1 mb-5 mt-5">
    <div class="row">
        <div class="col-md-12 mx-auto">

            <div class="card w-100">
                <div class="card-body">
                    <div class="container p-4">
                        <h2 class="title text-center">
                            Nuevo Paciente
                        </h2>
                    </div>
                    <form action="/pacientes/diagnostico" method="POST" class="row g-3 needs-validation" validate>

                        <h4 class="text-center">
                            Diagnóstico
                        </h4>
                        
                        <div class="row g-2">
                            <div class="col-md">
                                <div class="form-floating mb-3">
                                    <textarea name="diagnostico" class="form-control"
                                        placeholder="Historia de la enfermedad" id="floatingTextarea2"
                                        style="height: 100px"></textarea>
                                    <label for="floatingTextarea2">Diagnóstico</label>
                                </div>
                            </div>
                        </div>

                        <div class="row g-2">
                            <div class="col-md">
                                <div class="form-floating mb-3">
                                    <textarea name="planes" class="form-control"
                                        id="floatingTextarea2"
                                        style="height: 100px"></textarea>
                                    <label for="floatingTextarea2">Plan</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <select name="referencia" class="form-select" id="floatingSelect"
                                aria-label="Floating label select example">
                                <option value="Sesiones" selected>Sesiones</option>
                                <option value="Fisioterapia">Fisioterapia</option>
                                <option value="Med. Especialidad">Med. Especialidad</option>
                                <option value="Laboratorio">Laboratorio</option>
                            </select>
                            <label for="floatingSelect">Referencia</label>
                        </div>

                        {{!boton XDXDXDXD}}
                        <div class="row g-2">
                            <div class="col-md mb-3">
                                <div class="form-group p-3">
                                    <a class="btn btn-warning btn-block w-100" href="/pacientes">
                                        Regresar
                                    </a>
                                </div>
                            </div>
                            <div class="col-md">
                                <div class="form-group p-3">
                                    <button class="btn btn-success btn-block w-100">
                                        Siguiente
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

<section class="modal">
    <div class="modal_container">

        <img src="https://cdn-icons-png.flaticon.com/512/190/190411.png" alt="" class="image">

        <h2 class="title">
            Esta es la ventana modal
        </h2>
        <p class="text">
            Esta en serio es la ventana modal
        </p>
        <a href="#" class="modal_close">Cerrar</a>
    </div>
</section>

