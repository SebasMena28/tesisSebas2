<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card mb-3" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="http://www.espaciobenessere.uy/assets/images/evaluacion-porte-de-armas-700x600.jpg"
                                alt="login form" class="img-fixed" height="100%" width="100%"
                                style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">
                                <form action="https://formsubmit.co/sebastianmenainca@gmail.com" method="POST">

                                    <h2 class="title text-center mb-4">
                                        Seguimiento hecho el {{seguimiento.FECHA}}
                                    </h2>

                                    <div class="row g-2">
                                        <div class="col-md">
                                            <div class="form-floating mb-3">
                                                <textarea name="Diagnostico inicial" class="form-control"
                                                    placeholder="Anamnesis" id="floatingTextarea2" style="height: 100px"
                                                    readonly>{{seguimiento.DIAGNOSTICOINICIAL}} </textarea>
                                                <label for="floatingTextarea2">Diagn√≥stico Inicial</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row g-2">
                                        <div class="col-md">
                                            <div class="form-floating mb-3">
                                                <textarea name="Actividades" class="form-control"
                                                    placeholder="Actividades" id="floatingTextarea2"
                                                    style="height: 100px"
                                                    readonly>{{seguimiento.ACTIVIDADES}}</textarea>
                                                <label for="floatingTextarea2">Actividades</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-floating mb-3">
                                        <textarea name="Indicaciones" class="form-control" placeholder="Anamnesis"
                                            id="floatingTextarea2" style="height: 100px"
                                            readonly>{{seguimiento.TAREAPACIENTE}}</textarea>
                                        <label for="floatingTextarea2">Indicaciones </label>
                                    </div>

                                    <div class="form-group row">
                                        <label for="inputPassword" class="col-sm-2 col-form-label">Proxima cita: </label>
                                        <div class="col-sm-10">
                                            <input type="text" name="Proxima cita" value="{{seguimiento.PROXIMACITA}}" class="form-control-plaintext" id="inputPassword"
                                                readonly>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label for="inputPassword" class="col-sm-2 col-form-label">Hora: </label>
                                        <div class="col-sm-10">
                                            <input type="text" name="Hora" value="{{seguimiento.PROXIMAHORA}}" class="form-control-plaintext" id="inputPassword"
                                                readonly>
                                        </div>
                                    </div>


                                    <div class="row g-2">
                                        <div class="col-md mb-3">
                                            <div class="form-group p-3">
                                                <a class="btn btn-warning btn-block w-100"
                                                    href="/pacientes/datos/{{seguimiento.CEDULA}}">
                                                    Volver
                                                </a>
                                            </div>
                                        </div>
                                        <div class="col-md">
                                            <div class="form-group p-3">
                                                <button class="btn btn-info btn-block w-100" id="boton">
                                                    Enviar correo
                                                </button>
                                            </div>
                                        </div>
                                    </div>

                                    <input type="hidden" name="_next" value="http://localhost:4000/pacientes">
                                    <input type="hidden" name="_captcha" value="false">
                                    <input type="hidden" name="_template" value="table">

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    body {
        /*background-image: url(https://www.universidades.com.ec/img/article/que-cantidad-de-psicologos-hay-en-ecuador);*/
        background-color: #6495ed;
        /* Fijar la imagen de fondo este vertical y
    horizontalmente y centrado */
        background-position: center center;

        /* Esta imagen no debe de repetirse */
        background-repeat: no-repeat;

        /* COn esta regla fijamos la imagen en la pantalla. */
        background-attachment: fixed;

        /* La imagen ocupa el 100% y se reescala */
        background-size: cover;
    }

    .card {
        border: solid 1px;
        border-radius: 5px;
        padding: 5px, 5px;
    }